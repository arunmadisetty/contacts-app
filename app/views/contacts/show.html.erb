<h2><%= @contact.first_name %> <%= @contact.last_name %></h2>
<h3>Email: <%= @contact.email %></h3>
<h3>Phone: <%= @contact.phone_number %></h3>
<a href="/contacts/<%= @contact.id %>/edit" type="button" class="btn btn-primary btn-md">Update Contact</a>
<%= form_tag "/contacts/#{@contact.id}", method: "delete" do %>
  <input type="submit" class="btn btn-default btn-md" value="Delete contact">
<% end %>